page {
  background: #f9f9f9;
}

.bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 144rpx;
  z-index: -1;
}

.card {
  margin: 30rpx 20rpx;
  border-radius: 10rpx;
  background-color: white;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.login-prompt-card, .user-info-card {
  display: flex;
  flex-direction: row;
  margin: 30rpx 20rpx;
  border-radius: 3rpx;
  background-color: white;
  height: 100rpx;
  position: relative;
  padding: 50rpx 20rpx;
}

.login-prompt-default-avatar, .user-avatar {
  height: 100rpx;
  width: 100rpx;
  background-color: #f5e06a;
  border-radius: 50%;
}

.login-prompt-texts, .user-info-text {
  margin-left: 30rpx;
}

.login-prompt-status {
  display: block;
  font-size: 40rpx;
  line-height: 56rpx;
  margin-bottom: 5rpx;
}

.login-prompt-tips {
  display: block;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.75;
}

.wechat-login-button {
  background-color: #f5e06a;
  margin: 0 auto;
  border-radius: 5rpx;
  text-align: center;
  padding: 15rpx 50rpx;
  width: 500rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}

.image-cart {
  width: 88rpx;
  height: 80rpx;
}

.image-order {
  width: 80rpx;
  height: 80rpx;
}

.image-check {
  width: 22rpx;
  height: 16rpx;
}

.image-line-black {
  width: 21rpx;
  height: 34rpx;
}

button.button-reset {
  position: relative;
  display: block;
  margin: 0;
  padding: 0;
  box-sizing: none;
  font-size: unset;
  text-align: left;
  text-decoration: none;
  line-height: unset;
  border-radius: 0;
  overflow: hidden;
  color: unset;
  background-color: unset;
}
