#primary-info, #services, #comments {
  position: relative;
}

#primary-info, #other-info {
  background-color: white;
}

#primary-info {
  padding: 20rpx;
}

#image {
  width: 100%;
}

#primary-info > text {
  display: block;
}

#name {
  font-weight: bold;
  font-size: 42rpx;
  line-height: 59rpx;
}

#source {
  font-size: 35rpx;
  line-height: 42rpx;
  opacity: 0.7;
}

#price {
  text-align: right;
}

.price-tag {
  background-color: #f5e069;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  padding: 5rpx;
  text-align: center;
  font-weight: bold;
}

#other-info {
  margin-top: 20rpx;
  margin: 10rpx;
  padding: 20rpx 10rpx;
  border-radius: 5rpx;
}

#services {
  font-size: 35rpx;
  line-height: 42rpx;
  opacity: 0.8;
  margin: 10rpx 0 30rpx 0;
}

.icon-check {
  width: 22rpx;
  height: 16rpx;
}

#services view {
  margin-left: 10rpx;
  display: block;
  margin-bottom: 5rpx;
  font-size: 27rpx;
  line-height: 38rpx;
}

#comments {
  border-top: 1rpx solid gray;
  margin: 0 10rpx;
  padding: 10rpx 0;
}

#comments-info {
  margin: 10rpx 0;
  display: flex;
  width: 100%;
  font-size: 33rpx;
  line-height: 46rpx;
}

#comments-info-title {
  flex-grow: 1;
}

#comments-count {
  flex-grow: 0;
}

.comment {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.75;
  margin: 5rpx 0;
}

#operations {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
}

#add-to-cart, #buy {
  width: 0rpx;
  text-align: center;
  flex-grow: 1;
  padding: 20rpx 0;
  font-size: 35rpx;
  line-height: 49rpx;
}

#add-to-cart {
  background-color: #f7eb9f;
}

#buy {
  background-color: #f6e15f;
}
