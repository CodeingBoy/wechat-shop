#recommended-product {
  background-color: white;
  margin: 25rpx 35rpx;
  position: relative;
  height: 400rpx;
  border-radius: 13rpx;
}

#recommended-product-name {
  position: absolute;
  left: 20rpx;
  top: 35rpx;
  vertical-align: center;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 39rpx;
  display: flex;
  align-items: center;
}

#recommended-product-image {
  position: relative;
  left: 150rpx;
  text-align: right;
  z-index: 100;
  height: 400rpx;
}

#recommended-product-image image {
  height: 400rpx;
}

#recommended-promotion-image {
  position: absolute;
  left: 25rpx;
  bottom: 0;
}

#recommended-promotion-image image {
  width: 250rpx;
}

.line-red-image {
  width: 24rpx;
  height: 39rpx;
  margin: 0 10rpx;
}

#division-line {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

#product-list {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.product {
  position: relative;
  width: 330rpx;
  padding: 10rpx;
  margin: 10rpx 10rpx;
  background-color: white;
  border-radius: 3rpx;
}

.product-image {
  width: 100%;
}

.product-info {
  display: flex;
}

.product-name, .product-info{
  margin-top: 5rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}

.price-tag, .add-product-to-cart {
  background-color: #f5e069;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  padding: 3rpx;
  text-align: center;
}

.product-price {
  flex-grow: 1;
  display: flex;
}
