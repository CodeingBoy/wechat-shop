#recommended-product{
  background-color: white;
  margin: 25rpx 35rpx;
  position: relative;
  height: 400rpx;
}

#recommended-product-name{
  position: absolute;
  left: 20rpx;
  top: 35rpx;
  vertical-align: center;
  font-size: 35rpx;
  line-height: 49rpx;
}

#recommended-product-image{
  position: relative;
  left: 150rpx;
  text-align: right;
  z-index: 100;
  height: 400rpx;
}

#recommended-product-image image{
  height: 400rpx;
}

#recommended-promotion-image{
  position: absolute;
  left: 25rpx;
  bottom: 0;
}

#recommended-promotion-image image{
  width: 250rpx;
}

.line-red-image{
  width: 24rpx;
  height: 36rpx;
  margin: 0 10rpx;
}

#division-line{
  text-align: center;
}